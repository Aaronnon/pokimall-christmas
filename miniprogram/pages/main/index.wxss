.pic-container {
  padding-top: 160rpx;
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.pic-container image:nth-child(1) {
  left: 108rpx;
  position: absolute;
  width: 212rpx;
  height: 1054rpx;
}

.pic-container image:nth-child(2) {
  position: absolute;
  left: 334rpx;
  width: 336rpx;
  height: 858rpx;
  z-index: 2;
}

.pic-container image:nth-child(3) {
  position: absolute;
  right: 40rpx;
  width: 212rpx;
  height: 672rpx;
  transform-origin: top;
  -webkit-animation: upAnimation 5s ease-in-out infinite ;
  animation: upAnimation 5s ease-in-out infinite ;
  
}

@keyframes upAnimation {
  0% {
      transform: rotate(0deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }

  10% {
      transform: rotate(-12deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }

  20% {
      transform: rotate(12deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }

  28% {
      transform: rotate(-10deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }

  36% {
      transform: rotate(10deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  42% {
      transform: rotate(-8deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  48% {
      transform: rotate(8deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  52% {
      transform: rotate(-4deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  56% {
      transform: rotate(4deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  60% {
      transform: rotate(0deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  100% {
      transform: rotate(0deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }
}


@-webkit-keyframes bounce-left-right {
  25% {
    -webkit-transform: rotate(-20deg);
  }

  50% {
    -webkit-transform: rotate(0deg)
  }

  75% {
    -webkit-transform: rotate(20deg)
  }
  100%{
    -webkit-transform: rotate(0deg)
  }
}

@keyframes bounce-left-right {
  25% {
    transform: rotate(-40deg);
  }

  50% {
    transform: rotate(40deg)
  }

  75% {
    transform: rotate(20deg)
  }
  100%{
    transform: rotate(-40deg)
  }
}

.bottom-container{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.arrow-container {
  z-index: 2;
  position: relative;
  -webkit-animation: bounce-down 1.6s linear infinite;
  animation: bounce-down 1.6s linear infinite;
}

.arrow {
  padding-bottom: 60rpx;
  width: 47rpx;
  height: 47rpx;
}


@-webkit-keyframes bounce-down {
  25% {
    -webkit-transform: translateY(-4px);
  }

  50%,
  100% {
    -webkit-transform: translateY(0);
  }

  75% {
    -webkit-transform: translateY(4px);
  }
}

@keyframes bounce-down {
  25% {
    transform: translateY(-4px);
  }

  50%,
  100% {
    transform: translateY(0);
  }

  75% {
    transform: translateY(4px);
  }
}

